<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="dita-ot/plugin.rnc" type="application/relax-ng-compact-syntax"?>
<!--
	This file is part of the DITA-OT JavaDoc Plug-in project.
	See the accompanying LICENSE file for applicable licenses.
-->
<plugin id="fox.jason.passthrough.javadoc" version="1.0.0">
	<feature extension="ant.import" file="process_javadoc.xml"/>
	<!--
		This plugin requires the passthrough reader
	-->
	<require plugin="fox.jason.passthrough"/>
	
	<!-- Uses the passthrough extension point and file reader -->
	<feature extension="dita.parser">
		<parser format="javadoc" class="fox.jason.passthrough.parser.FileReader"/>
	</feature>
	<feature extension="passthrough.pre" value="javadoc.process.pre"/>
	<feature extension="passthrough.process" value="javadoc.process"/>

	<!-- PDF extension point -->
	<feature extension="dita.xsl.xslfo" value="xsl/xslfo.xsl" type="file"/>
</plugin>